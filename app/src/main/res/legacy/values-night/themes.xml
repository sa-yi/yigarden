<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
  <style name="Base.AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/tianyi_blue</item>
    <item name="colorPrimaryDark">@color/tianyi_blue</item>
    <item name="colorAccent">@color/tianyi_blue</item>
    <!--Android 5.x开始需要把颜色设置透明，否则导航栏会呈现系统默认的浅灰色-->
    <item name="android:statusBarColor">@android:color/transparent</item>
    <item name="android:windowLightStatusBar">true</item>
    <!-- BottomNavigationView colors -->
    <!--item name="android:colorBackground">@color/tianyi_blue</item-->
    <item name="android:colorControlNormal">@color/tianyi_blue</item>
    <item name="android:colorControlActivated">@color/tianyi_blue</item>

    <!-- 底部导航栏按钮theme. -->
    <item name="android:textColorSecondary">@color/tianyi_blue</item>
  </style>
  <style name="AppTheme" parent="Base.AppTheme" />
  <style name="ErrorTheme" parent="Base.AppTheme">
    <item name="android:windowTranslucentStatus">false</item>
    <!--Android 5.x开始需要把颜色设置透明，否则导航栏会呈现系统默认的浅灰色-->
    <item name="android:statusBarColor">@color/tianyi_blue</item>
  </style>
</resources>