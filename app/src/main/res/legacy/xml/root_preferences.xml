<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory app:title="主题">

        <SwitchPreferenceCompat
            app:key="theme"
            app:title="@string/theme_title"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="音乐">
        <SwitchPreferenceCompat
            app:key="use_network"
            app:title="网络"
            app:summary="从网络加载歌单"
            app:summaryOff="从本地加载歌单"/>
    </PreferenceCategory>
    <PreferenceCategory app:title="权限">
        <SwitchPreferenceCompat
            app:key="external_storage"
            app:title="存储"
            app:summary="用于存储图片文件及下载的文件等"
            app:summaryOff="关闭后你将无法下载文件"/>
        <SwitchPreferenceCompat
            app:key="float_window"
            app:title="悬浮窗"
            app:summary="用于悬浮歌词的显示"/>
        <Preference
            app:key="system_settings"
            app:title="转到系统设置"/>
    </PreferenceCategory>
</PreferenceScreen>